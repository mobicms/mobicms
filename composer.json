{
    "name": "mobicms/mobicms",
    "description": "mobiCMS Content Management System",
    "type": "project",
    "license": "GPL-3.0-only",
    "homepage": "https://mobicms.org",
    "keywords": [
        "mobicms",
        "cms"
    ],
    "authors": [
        {
            "name": "Oleg Kasyanov",
            "role": "Team Lead, Developer",
            "homepage": "https://github.com/batumibiz",
            "email": "oleg@batumi.org"
        },
        {
            "name": "mobiCMS Contributors",
            "homepage": "https://github.com/mobicms/mobicms/graphs/contributors"
        }
    ],
    "support": {
        "source": "https://github.com/mobicms/mobicms",
        "issues": "https://github.com/mobicms/mobicms/issues"
    },
    "config": {
        "vendor-dir": "system/vendor",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~8.1.0",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "mobicms/config": "dev-main",
        "mobicms/container": "dev-main",
        "mobicms/interface": "dev-main",
        "mobicms/system": "dev-main"
    },
    "require-dev": {
        "mobicms/testutils": "^1.0",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^8.5",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^4.27"
    },
    "autoload": {
        "psr-4": {
            "Mobicms\\": "system/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MobicmsTest\\": "system/tests/unit/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@taint-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --show-info=true",
        "taint-analysis": "psalm --taint-analysis --show-info=true --report=results.sarif",
        "test": "phpunit --colors=always",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --colors=always --coverage-clover clover.xml --log-junit report.xml"
        ]
    }
}
